<% content_for :title do %>
Locker Applications
<% end %>
<% if notice.present? %>
  <lux-alert status="<%= notice['type'] %>" dismissible><%= notice['message'] %></lux-alert>
<% end %>

<lux-card id="locker-form-header" size="full-width">
  <lux-card-header>
    <!-- lux-hyperlink is the text screen readers would read, we don't want to wrap the entire card -->
    <heading level="h1" size="h3">Locker Applications</heading>
  </lux-card-header>
  <lux-card-content>
  <%= form_tag(locker_applications_path, method: :get) do %>
  <lux-search-box >
    <lux-input-text id="search" name="search" label="Search by user netid" :hide-label="true" placeholder="Search by user netid" size="large" value="<%= params[:search]%>"></lux-input-text>
    <lux-input-button id="search_submit" type="submit" variation="icon" size="medium" icon="search"></lux-input-button>
  </lux-search-box>    
  <% end %>
  <%= link_to 'Clear Search', locker_applications_path %>
  </lux-card-content>
</lux-card>

<%= render partial: "index_view", collection: @locker_applications, as: :locker_application %>

<%# Note the double equals sign "==" which marks the output as trusted and html safe: %>
<%== pagy_nav(@pagy) %>
