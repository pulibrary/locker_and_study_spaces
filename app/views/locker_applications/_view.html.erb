
<lux-card size="full-width">
  <lux-grid-container>
    <lux-grid-item columns="lg-3 md-6 sm-12">
      <strong>Preferred size:</strong>
      <%= locker_application.preferred_size %>
    </lux-grid-item>
    <lux-grid-item columns="lg-3 md-6 sm-12">
      <strong>Preferred general area:</strong>
      <%= locker_application.preferred_general_area %>
    </lux-grid-item>
    <lux-grid-item columns="lg-6 md-6 sm-12">
      <strong>Accessibility Needs:</strong>
      <ul>
        <% locker_application.accessibility_needs.each do |need| %>
          <li><%= need %></li>
        <% end %>
      </ul>
    </lux-grid-item>
    <lux-grid-item columns="lg-3 md-6 sm-12">
      <strong>Accessible:</strong>
      <%= locker_application.accessible %>
    </lux-grid-item>
    <lux-grid-item columns="lg-3 md-6 sm-12">
      <strong>Semester:</strong>
      <%= locker_application.semester %>
    </lux-grid-item>
    <lux-grid-item columns="lg-3 md-6 sm-12">
      <strong>Status at application:</strong>
      <%= locker_application.status_at_application %>
    </lux-grid-item>
    <lux-grid-item columns="lg-3 md-6 sm-12">
      <strong>Department at application:</strong>
      <%= locker_application.department_at_application %>
    </lux-grid-item>
    <lux-grid-item columns="lg-3 md-6 sm-12">
      <strong>User:</strong>
      <%= locker_application.uid %>
    </lux-grid-item>
  </lux-grid-container>
</lux-card>
