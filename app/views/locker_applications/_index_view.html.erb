
  <lux-card size="full-width" id="application_<%= locker_application.id %>">
   <lux-grid-container>
    <lux-grid-item columns="lg-2 md-4 sm-12">
      <strong>User:</strong>
      <span><%= locker_application.uid %></span>
    </lux-grid-item>
    <lux-grid-item columns="lg-3 md-4 sm-12">
      <strong>Status:</strong>
      <span><%= locker_application.status_at_application %></span>
    </lux-grid-item>
    <lux-grid-item columns="lg-3 md-4 sm-12">
      <strong>Department:</strong>
      <span><%= locker_application.department_at_application %></span>
    </lux-grid-item>
    <lux-grid-item columns="lg-2 md-4 sm-12">
      <strong>Semester:</strong>
      <span><%= locker_application.semester %></span>
    </lux-grid-item>
    <lux-grid-item columns="lg-2 md-4 sm-12">
      <%= link_to 'Edit', edit_locker_application_path(locker_application) %>
      <%= link_to 'Assign Locker', assign_locker_application_path(locker_application) %>
      <% if current_page?(awaiting_assignment_locker_applications_path) %>
        <%= link_to toggle_link_text(locker_application.archived), toggle_archived_locker_application_path(locker_application), method: :put %>
      <% end %>
    </lux-grid-item>
    <% if locker_application.duplicates.any? %>
    <lux-grid-item columns="lg-6 md-9 sm-12" :offset="true">
      <%= render partial: 'duplicate_applications', locals: {duplicates: locker_application.duplicates, partial_id: rand(1..1000)} %>
    </lux-grid-item>
    <% end %>
   </lux-grid-container>
</lux-card>
