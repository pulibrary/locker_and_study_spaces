<% content_for :title do %>
Edit application
<% end %>
<% if notice.present? %>
  <lux-alert status="<%= notice['type'] %>" dismissible><%= notice['message'] %></lux-alert>
<% end %>
<%= render 'form', locker_application: @locker_application %>

<% if @locker_application.complete %>
  <%= render layout: '/shared/related_actions' do %>
    <lux-hyperlink href="<%= locker_application_path(@locker_application) %>" variation="button solid">Show</lux-hyperlink>
    <lux-hyperlink href="<%= locker_applications_path %>" variation="button solid">Back</lux-hyperlink>
  <% end %>
<% end %>
