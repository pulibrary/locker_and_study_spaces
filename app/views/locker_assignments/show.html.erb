<% content_for :title do %>
Assignment
<% end %>
<% if notice.present? %>
  <lux-alert status="<%= notice['type'] %>" dismissible><%= notice['message'] %></lux-alert>
<% end %>

<lux-card size="full-width">
  <lux-heading level="h2">Assignment</lux-heading>
  <lux-card size="full-width">
   <lux-grid-container>
    <lux-grid-item columns="lg-3 md-6 sm-12">
      <strong>Start date:</strong>
      <%= @locker_assignment.start_date %>
    </lux-grid-item>
    <lux-grid-item columns="lg-3 md-6 sm-12">
      <strong>Expiration date:</strong>
      <%= @locker_assignment.expiration_date %>
    </lux-grid-item>
    <lux-grid-item columns="lg-3 md-6 sm-12">
      <strong>Released date:</strong>
      <%= @locker_assignment.released_date %>
    </lux-grid-item>
    <lux-grid-item columns="lg-3 md-6 sm-12">
      <strong>Locker:</strong>
      <%= link_to @locker_assignment.locker.location, locker_path(@locker_assignment.locker) %>
    </lux-grid-item>
   </lux-grid-container>
  </lux-card>
</lux-card>

<lux-card size="full-width">
  <lux-heading level="h2">Application</lux-heading>
  <%= render '/locker_applications/view', locker_application: @locker_assignment.locker_application %>
</lux-card>

<%= render layout: '/shared/related_actions' do %>
  <lux-hyperlink href="<%= edit_locker_assignment_path(@locker_assignment) %>" variation="button solid">Edit</lux-hyperlink>
  <lux-hyperlink href="<%= card_locker_assignment_path(@locker_assignment) %>" variation="button solid">Card for printing</lux-hyperlink>
  <lux-hyperlink href="<%= locker_assignments_path %>" variation="button solid">Back</lux-hyperlink>
<% end %>
