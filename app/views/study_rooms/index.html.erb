<% content_for :title do %>
Study Rooms
<% end %>
<card id="study_room-form-header" size="full-width">
  <card-header>
    <!-- Hyperlink is the text screen readers would read, we don't want to wrap the entire card -->
    <heading level="h1" size="h3">Study Rooms</heading>
  </card-header>
    <card-content>
    <%= form_tag(study_rooms_path, method: :get) do %>
    <search-box >
      <input-text id="search" name="search" label="Search by location" :hide-label="true" placeholder="Search by location" size="large" value="<%= params[:search]%>"></input-text>
      <input-button id="search_submit" type="submit" variation="icon" size="medium" icon="search"></input-button>
    </search-box>    
    <% end %>
    <%= link_to 'Clear Search', study_rooms_path %>
  </card-content>
</card>
<% if notice.present? %>
  <alert status="<%= notice['type'] %>" autoclear dismissible><%= notice['message'] %></alert>
<% end %>

<%= render partial: "index_view", collection: @study_rooms, as: :study_room %>

<%# Note the double equals sign "==" which marks the output as trusted and html safe: %>
<%== pagy_nav(@pagy) %>

<%= link_to 'New Study Room', new_study_room_path %>
