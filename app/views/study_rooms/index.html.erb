<p id="notice"><%= notice %></p>

<h1>Study Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>General area</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_rooms.each do |study_room| %>
      <tr>
        <td><%= study_room.location %></td>
        <td><%= study_room.general_area %></td>
        <td><%= study_room.notes %></td>
        <td><%= link_to 'Show', study_room %></td>
        <td><%= link_to 'Edit', edit_study_room_path(study_room) %></td>
        <td><%= link_to 'Destroy', study_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

