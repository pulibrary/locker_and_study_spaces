<% content_for :title do %>
Study Rooms
<% end %>
<lux-card id="study_room-form-header" size="full-width">
  <lux-card-header>
    <!-- lux-hyperlink is the text screen readers would read, we don't want to wrap the entire card -->
    <lux-heading level="h1" size="h3">Study Rooms</lux-heading>
  </lux-card-header>
    <lux-card-content>
    <%= form_tag(study_rooms_path, method: :get) do %>
    <lux-search-box >
      <lux-input-text id="search" name="search" label="Search by location" :hide-label="true" placeholder="Search by location" size="large" value="<%= params[:search]%>"></lux-input-text>
      <lux-input-button id="search_submit" type="submit" variation="icon" size="medium" icon="search"></lux-input-button>
    </lux-search-box>    
    <% end %>
    <%= link_to 'Clear Search', study_rooms_path %>
  </lux-card-content>
</lux-card>
<% if notice.present? %>
  <lux-alert status="<%= notice['type'] %>" dismissible><%= notice['message'] %></lux-alert>
<% end %>

<%= render partial: "index_view", collection: @study_rooms, as: :study_room %>

<%# Note the double equals sign "==" which marks the output as trusted and html safe: %>
<%== pagy_nav(@pagy) %>

<%= link_to 'New Study Room', new_study_room_path %>
