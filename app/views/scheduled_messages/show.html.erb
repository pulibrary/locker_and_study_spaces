<% content_for :title do %>
Scheduled Message
<% end %>
<% if notice.present? %>
  <lux-alert status="<%= notice['type'] %>" dismissible><%= notice['message'] %></lux-alert>
<% end %>

<p>
  <strong>Schedule:</strong>
  <%= @scheduled_message.schedule %>
</p>

<p>
  <strong>Applicable range:</strong>
  <%= daterange_to_string(@scheduled_message.applicable_range) %>
</p>

<p>
  <strong>Template:</strong>
  <%= @scheduled_message.template %>
</p>

<p>
  <strong>User filter:</strong>
  <%= @scheduled_message.user_filter %>
</p>

<p>
  <strong>Type:</strong>
  <%= @scheduled_message.type %>
</p>

<p>
  <strong>Results:</strong>
  <%= @scheduled_message.results %>
</p>

<%= render layout: '/shared/related_actions' do %>
  <lux-hyperlink href="<%= edit_scheduled_message_path(@scheduled_message) %>" variation="button solid">Edit</lux-hyperlink>
  <lux-hyperlink href="<%= scheduled_messages_path %>" variation="button solid">Back</lux-hyperlink>
<% end %>
