<% content_for :title do %>
Study Room Violation
<% end %>
<% if notice.present? %>
  <lux-alert status="<%= notice['type'] %>" dismissible><%= notice['message'] %></lux-alert>
<% end %>

<p>
  <strong>User:</strong>
  <%= @study_room_violation.user_id %>
</p>

<p>
  <strong>Study room:</strong>
  <%= @study_room_violation.study_room_id %>
</p>

<p>
  <strong>Number of books:</strong>
  <%= @study_room_violation.number_of_books %>
</p>

<%= render layout: '/shared/related_actions' do %>
  <lux-hyperlink href="<%= edit_study_room_violation_path(@study_room_violation) %>" variation="button solid">Edit</lux-hyperlink>
  <lux-hyperlink href="<%= study_room_violations_path %>" variation="button solid">Back</lux-hyperlink>
<% end %>
