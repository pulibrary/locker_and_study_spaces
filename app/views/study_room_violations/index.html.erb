<% content_for :title do %>
Study Room Violations
<% end %>
<% if notice.present? %>
  <lux-alert status="<%= notice['type'] %>" dismissible><%= notice['message'] %></lux-alert>
<% end %>

<h1>Study Room Violations</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Study room</th>
      <th>Number of books</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_room_violations.each do |study_room_violation| %>
      <tr>
        <td><%= study_room_violation.user_id %></td>
        <td><%= study_room_violation.study_room_id %></td>
        <td><%= study_room_violation.number_of_books %></td>
        <td><%= link_to 'Show', study_room_violation %></td>
        <td><%= link_to 'Edit', edit_study_room_violation_path(study_room_violation) %></td>
        <td><%= link_to 'Destroy', study_room_violation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render layout: '/shared/related_actions' do %>
  <lux-hyperlink href="<%= new_study_room_violation_path %>" variation="button solid">New Study Room Violation</lux-hyperlink>
<% end %>
