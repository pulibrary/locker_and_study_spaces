<% if notice.present? %>
<card id="notice" size="full-width">
  <%= notice %>
</card>
<% end %>


<h1>Study Room Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>User</th>
      <th>Study room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_room_assignments.each do |study_room_assignment| %>
      <tr>
        <td><%= study_room_assignment.start_date %></td>
        <td><%= study_room_assignment.expiration_date %></td>
        <td><%= study_room_assignment.user %></td>
        <td><%= study_room_assignment.study_room %></td>
        <td><%= link_to 'Show', study_room_assignment %></td>
        <td><%= link_to 'Edit', edit_study_room_assignment_path(study_room_assignment) %></td>
        <td><%= link_to 'Destroy', study_room_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
