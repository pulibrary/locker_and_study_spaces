<% content_for :title do %>
Study Room Assignments
<% end %>
<% if notice.present? %>
  <lux-alert status="<%= notice['type'] %>" dismissible><%= notice['message'] %></lux-alert>
<% end %>

<h1>Study Room Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>User</th>
      <th>Study room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_room_assignments.each do |study_room_assignment| %>
      <tr>
        <td><%= study_room_assignment.start_date %></td>
        <td><%= study_room_assignment.expiration_date %></td>
        <td><%= study_room_assignment.user %></td>
        <td><%= study_room_assignment.study_room %></td>
        <td><%= link_to 'Show', study_room_assignment %></td>
        <td><%= link_to 'Edit', edit_study_room_assignment_path(study_room_assignment) %></td>
        <td><%= link_to 'Destroy', study_room_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%# Note the double equals sign "==" which marks the output as trusted and html safe: %>
<%== pagy_nav(@pagy) %>


<%= render layout: '/shared/related_actions' do %>
  <lux-hyperlink href="<%= new_study_room_assignment_path %>" variation="button solid">New Study Room Assignment</lux-hyperlink>
<% end %>
